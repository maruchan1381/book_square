<div class="container has-background-info-light" >
   <h1 class="subtitle is-5">みんなの本だな</h1>
    <div class="columns is-multiline">
      <% @books.each do |book| %>
        <div class="column is-3">
          <div class="card">
            <div class="card-image">
                <%= image_tag book.image_url%>
            </div>
            <div class="card-title">
              <span><%= book.title %><br><%= book.author %></span>
            </div>
            <% if current_user.already_liked?(book) %>
             <%= link_to book_likes_path(book), method: :delete do %>
              <i class="fa fa-heart"></i>
             <% end %>
             <%= book.likes.count %>
            <% else %>
              <%= link_to book_likes_path(book), method: :post do %>
               <i class="fa fa-heart-o"></i>
             <% end %>
             <%= book.likes.count %>
            <% end %>
          </div>
       </div>
      <% end %>
    </div>
</div>