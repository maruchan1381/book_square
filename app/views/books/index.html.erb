<section class="section">
  <div class="container">
    <div class="columns is_multiline">
      <% @books.each do |book| %>
        <div class="colum is-4">
          <div class="card">
            <div class="card-image">
              <figure class="image is-4by3">
                <%= image_tag book.image_url%>
              </figure>
            </div>
            <div class="card-title">
              <span><%= book.title %><br><%= book.author %></span>
              <br><%= link_to '削除', book_path(book.id), method: :delete %>
            </div>
          </div>
       </div>
      <% end %>
    </div>
  </div>
</section>