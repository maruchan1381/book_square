<div class="container has-background-warning-light">
  <h1 class="subtitle is-5"><%= @nickname %>の本だな（<%= @books.count %>さつ）</h1>
  <div class="columns is-multiline">
  <% @books.each do |book| %>
    <div class="column is-3">
      <div class="card">
        <div class="card-image">
          <p><%= image_tag book.image_url %></p>
        </div>
        <div class="card-title">
          <p><%= book.title %></p>
          <p><%= book.author %></p>
        </div>
        <br>
        <div class="card-review" id="reviews">
          <p><b>かんそう</b></p>
          <span><%= book.review.description %></span>
          <p><b>いつよんだ</b></p>
          <p><%= book.review.date %></p>
        </div>
        <p><%= link_to 'けす', book_path(book.id), method: :delete %></p>
      </div>
    </div>
  <% end %>
</div>