<!DOCTYPE html>
<html>
  <head>
    <title>BookSquare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <header class="navbar is-success">
     <div class="navbar-brand">
      <%= link_to root_path, class: "navbar-item" do %>
          <h1 class="title is-4" style="font-family: cursive;">どくしょひろば</h1>
        <% end %>
     </div>
     <% if user_signed_in? %>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="field is-grouped">
                <p class="control">
                  <%= link_to "#{current_user.nickname}のページ", "/users/#{current_user.id}", class: "button is-warning is-light" %>
                </p>
                <p class="control">
                  <%= link_to "ほんのけんさく", search_books_path, class: "button is-warning is-light" %>
                <p class="control">
                  <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "button is-warning is-light" %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% else %>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="field is-grouped">
                <p class="control">
                  <%= link_to "ログイン", new_user_session_path, class: "button is-warning is-light" %>
                </p>
                <p class="control">
                  <%= link_to "しんきとうろく", new_user_registration_path, class: "button is-warning is-light" %>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
       </div>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
